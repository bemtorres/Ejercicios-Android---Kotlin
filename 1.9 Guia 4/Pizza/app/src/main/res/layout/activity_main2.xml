<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/precioes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/precioPizza"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/precioFinal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    </LinearLayout>
    <Button
            android:text="@string/volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnVolver"/>
</LinearLayout>